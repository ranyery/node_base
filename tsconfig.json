{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "allowJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
